<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record
        id="res_config_settings_view_form_inherit_osi_partner_credit_limit"
        model="ir.ui.view"
    >
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='show_margins']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="company_credit_limit">
                    <div class="o_setting_left_pane">
                        <field name="is_company_credit_limit" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_company_credit_limit" />
                        <div class="text-muted">
                            Check Company credit limit on a sale order confirmation.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
