<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_statement_inherit" inherit_id="account.report_statement">
        <xpath expr="//div[hasclass('page')]/table[2]" position="replace">
            <table class="table table-borderless m-0">
                <thead>
                    <tr>
                        <table class="table table-borderless">
                            <tr>
                                <th name="th_date" class="text-left p-0">Date</th>
                                <th name="th_partner" class="text-left p-0">Partner</th>
                                <th name="th_stmt" class="text-left p-0">Stmt</th>
                                <th name="th_doc" class="text-left p-0">Doc</th>
                                <th name="th_account" class="text-left p-0">Account</th>
                                <th name="th_match" class="text-left p-0">#</th>
                                <th name="th_amount" class="text-right p-0">Amount</th>
                            </tr>
                        </table>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.get_statement_entries()" t-as="datas" class="pb-2">
                        <td class="pl-0 pr-0">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="p-0">
                                        <span class="d-block" t-esc="datas.get('date')"/>
                                    </td>
                                    <td class="p-0">
                                        <span class="d-block" t-if="datas.get('partner_id')" t-esc="datas.get('partner_id')"/>
                                    </td>
                                    <td class="p-0">
                                        <span class="d-block" t-if="datas.get('statement_id')" t-esc="datas.get('statement_id')"/>
                                    </td>
                                    <td class="p-0">
                                        <span class="d-block" t-if="datas.get('move_id')" t-esc="datas.get('move_id')"/>
                                    </td>
                                    <td class="p-0">
                                        <span class="d-block" t-if="datas.get('account_id')" t-esc="datas.get('account_id')"/>
                                    </td>
                                    <td class="p-0">
                                        <span class="d-block" t-if="datas.get('matching_number')" t-esc="datas.get('matching_number')"/>
                                    </td>
                                    <td class="text-right p-0">
                                        <span class="d-block" t-if="datas.get('debit')" t-esc="datas.get('amount')"/>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>
        </xpath>
    </template>
</odoo>