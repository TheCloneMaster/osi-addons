<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="bank_statement_line_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <head>
                        </head>
                        <style>
                                table,thead,tbody, th,tr,td {border: 1px solid black;}
                        </style>
                        <h2>Bank Statement Lines</h2>
                        <h2>From :-<span t-esc="o.date_from"/>
                        </h2>
                        <h2>To :-<span t-esc="o.date_to"/>
                        </h2>
                        <h2>Report Generated By : <span t-esc="o.user_id.name"/>
                        </h2>
                        <h2>Starting Balance : <span t-esc="o.get_starting_balance()"/>
                        </h2>
                        <h2>Ending Balance : <span t-esc="o.get_ending_balance()"/>
                        </h2>
                        <h2>Report Generated By : <span t-esc="o.user_id.name"/>
                        </h2>
                        <table class="table" style="border: 1px solid black;">
                            <thead>
                                <tr>
                                    <th>Count</th>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Reference</th>
                                    <th>Account</th>
                                    <th>Partner</th>
                                    <th>Statement</th>
                                    <th>Matching</th>
                                </tr>
                            </thead>
                            <tbody >
                                <tr t-foreach="docs" t-as="o">
                                    <t t-set="i" t-value="1" />
                                    <tr t-foreach="o.get_bank_statement_report_data()" t-as="line">
                                        <t t-if="line._name=='account.bank.statement.line'">
                                            <td >
                                                <span t-esc="i"/>
                                            </td>
                                            <td >
                                                <span t-esc="line.date"/>
                                            </td>
                                            <td >
                                                <span t-esc="line.amount"/>
                                            </td>
                                            <td >
                                                <span t-esc="line.ref"/>
                                            </td>
                                            <td ></td>
                                            <td >
                                                <span t-esc="line.partner_id.name"/>
                                            </td>
                                            <td >
                                                <span t-esc="line.statement_id.name"/>
                                            </td>
                                            <t t-set="i" t-value="i+1"/>
                                        </t>
                                        <t t-if="line._name=='account.move.line'">
                                            <td ></td>
                                            <td >
                                                <span t-esc="line.date"/>
                                            </td>
                                            <t t-if="line.credit">
                                                <td >
                                                    <span t-esc="line.credit"/>
                                                </td>
                                            </t>
                                            <t t-if="line.debit">
                                                <td >
                                                    <span t-esc="line.debit"/>
                                                </td>
                                            </t>
                                            <td >
                                                <span t-esc="line.name"/>
                                            </td>
                                            <td >
                                                <span t-esc="line.account_id.name"/>
                                            </td>
                                            <td >
                                                <span t-esc="line.partner_id.name"/>
                                            </td>
                                            <td ></td>
                                            <td >
                                                <span t-esc="line.full_reconcile_id.name"/>
                                            </td>
                                        </t>
                                    </tr>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_bank_statement_wiz_report" model="ir.actions.report">
        <field name="name">Bank Statement Lines</field>
        <field name="model">report.bank.statement</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">account_bank_statement_extend.bank_statement_line_report_template</field>
        <field name="report_file">account_bank_statement_extend.bank_statement_line_report_template</field>
    </record>

</odoo>