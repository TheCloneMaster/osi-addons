<odoo>

    <record id="ir_cron_notify_inventory_adjustment_users" model="ir.cron">
        <field name="name">Notify for Inventory Adjustments</field>
        <field name='interval_number'>1</field>
        <field name='interval_type'>days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True" />
        <field name="doall" eval="False" />
        <field name="code">model.notify_for_inventory_adjustments()</field>
        <field name="state">code</field>
        <field name="model_id" ref="stock_inventory.model_stock_inventory"/>
    </record>
</odoo>
