<odoo>

    <record id="view_inventory_group_form_inherit_add_chatter" model="ir.ui.view">
        <field name="name">view.inventory.group.form.inherit.add.chatter</field>
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="stock_inventory.view_inventory_group_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids" options="{'open_attachments': True}"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
