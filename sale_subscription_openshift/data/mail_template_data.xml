<odoo>
    <!-- Instance is available -->
    <record id="email_kudu_instance_available" model="mail.template">
        <field name="name">Subscription: Instance Available</field>
        <field name="model_id" ref="sale_subscription.model_sale_subscription_line"/>
        <field name="subject">Kudu instance ${object.instance_name}</field>
        <field name="email_from">${(object.analytic_account_id.user_id.email_formatted or object.analytic_account_id.company_id.email or user.email_formatted) | safe}</field>
        <field name="email_to">${object.analytic_account_id.partner_id.email_formatted | safe}</field>
        <field name="body_html">
            <![CDATA[<div style="font-family: 'Lucica Grande',
                Ubuntu, Arial, Verdana, sans-serif; font-size: 14px;
                color: rgb(34, 34, 34); background-color: #FFF;"><p>Your Kudu instance ${object.instance_name} is available!
                </p>]]>
        </field>
    </record>
