<odoo>
    <record id="stock_move_line_bin_location_tree" model="ir.ui.view">
        <field name="name">Bin Location</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree" />
        <field name="arch" type="xml">
            <field name="lot_id" position="after">
                <field
                    name="bin_location"
                    attrs="{'readonly':[('picking_code','!=','incoming')]}"
                    invisible="not context.get('show_lots_m2o')"
                />
                <field
                    name="get_bin_location"
                    string="Bin Location"
                    invisible="not context.get('show_lots_text')"
                />
            </field>
        </field>
    </record>
    <record id="stock_move_line_bin_location_form" model="ir.ui.view">
        <field name="name">Bin Location</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_form" />
        <field name="arch" type="xml">
            <field name="lot_id" position="after">
                <field name="bin_location" />
            </field>
        </field>
    </record>
</odoo>
