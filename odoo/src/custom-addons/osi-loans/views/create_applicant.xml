<odoo>
    <data>

        <!--    adds custom tree list/view to this file-->

        <record id="osi_loans_view_tree" model="ir.ui.view">
            <field name="name">Applicants</field>
            <field name="model">new.applicant</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="fname"/>
                    <field name="lname"/>
                    <field name="dob"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="street_address"/>
                    <field name="street_address2"/>
                    <field name="state"/>
                    <field name="city"/>
                    <field name="zip"/>
                    <field name="ssn"/>
                    <field name="employment_status"/>
                    <field name="monthly_income"/>
                    <field name="employer"/>
                    <field name="employer_number"/>
                </tree>
            </field>
        </record>


