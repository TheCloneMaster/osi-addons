<odoo>
    <data>
        <!--    adds custom tree list/view to this file-->
        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="osi-loans.action_window">
            <field name="name">Loan Application</field>
            <field name="res_model">new.application</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="new_application_view_tree" model="ir.ui.view">
            <field name="name">Loan Application</field>
            <field name="model">new.application</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="Draft,Submitted,Reviewed"/>
                    </header>
                    <field name="applicant"/>
                    <field name="loan_type"/>
                    <field name="loan_term"/>
                    <field name="state"/>
                </form>
            </field>
        </record>
        <!-- actions opening views on models -->
    </data>
</odoo>
