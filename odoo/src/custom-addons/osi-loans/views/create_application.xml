<odoo>
    <data>
        <!-- actions opening views on models -->
        <record id="applicant_action" model="ir.actions.act_window">
            <field name="name">Applicants</field>
            <field name="res_model">new.applicant</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- actions opening views on models -->
        <record id="loan_action" model="ir.actions.act_window">
            <field name="name">Loans</field>
            <field name="res_model">loan.options</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- actions opening views on models -->
        <record id="application_action" model="ir.actions.act_window">
            <field name="name">Applications</field>
            <field name="res_model">new.application</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Top menu item -->
        <menuitem name="OSI-Loans" id="osi-loans.menu_root"/>

        <!-- menu categories -->
        <menuitem name="Applicants" id="osi-loans.applicants" parent="osi-loans.menu_root" action="applicant_action"/>
        <menuitem name="Applications" id="osi-loans.applications" parent="osi-loans.menu_root"
                  action="application_action"/>
        <menuitem name="Loans" id="osi-loans.loans" parent="osi-loans.menu_root" action="loan_action"/>

        <record id="new_application_view_form" model="ir.ui.view">
            <field name="name">Loan Application</field>
            <field name="model">new.application</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Submit" type="object" name="button_submit"
                                attrs="{'invisible':[('progress_state','=','submitted')]}"/>
                        <field name="progress_state" widget="statusbar" clickable="True"
                        statusbar_visible="draft, submitted,approved, rejected"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="applicant" widget="selection"
                                   attrs="{'readonly':[('progress_state','=','submitted')]}"/>
                            <field name="loan_type" widget="selection"
                                   attrs="{'readonly':[('progress_state','=','submitted')]}"/>
                            <field name="loan_term" attrs="{'readonly':[('progress_state','=','submitted')]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="new_application_view_tree" model="ir.ui.view">
            <field name="name">Loan Application</field>
            <field name="model">new.application</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="applicant"/>
                    <field name="loan_type"/>
                    <field name="loan_term"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>
