<odoo>
    <data>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="osi-loans.action_window">
            <field name="name">OSI-Loans window</field>
            <field name="res_model">new.applicant</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- Top menu item -->

        <menuitem name="OSI-Loans" id="osi-loans.menu_root"/>

        <!-- menu categories -->

        <menuitem name="Applications" id="osi-loans.menu_1" parent="osi-loans.menu_root"/>
        <menuitem name="Loans" id="osi-loans.menu_2" parent="osi-loans.menu_root"/>

        <!-- actions -->

        <menuitem name="Create Applicant" id="osi-loans.menu_1_list" parent="osi-loans.menu_1"
                  action="osi-loans.action_window"/>
        <menuitem name="New Application" id="osi-loans.menu_2_list" parent="osi-loans.menu_1"
                  action="osi-loans.action_window"/>
        <menuitem name="Open Applications" id="osi-loans.menu_3_list" parent="osi-loans.menu_1"
                  action="osi-loans.action_window"/>

        <menuitem name="Loan Options" id="osi-loans.menu_4_list" parent="osi-loans.menu_2"
                  action="osi-loans.action_window"/>
            <menuitem name="Server to list" id="osi-loans" parent="osi-loans.menu_2"
                      action="osi-loans.action_server"/>

    </data>
</odoo>
