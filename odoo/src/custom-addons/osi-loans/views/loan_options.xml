<odoo>
    <data>
         <!--    adds custom tree list/view to this file-->
        <record model="ir.actions.act_window" id="osi-loans.action_window">
            <field name="name">Loan Options</field>
            <field name="res_model">loan.options</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="loan_options_view_tree" model="ir.ui.view">
            <field name="name">Loan Options</field>
            <field name="model">loan.options</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="loan_name"/>
                    <field name="loan_apr"/>
                    <field name="minimum_credit"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record id="applicant.action_window" model="ir.actions.act_window">
            <field name="name">Applicants</field>
            <field name="res_model">new.applicant</field>
            <field name="view_mode">form</field>
        </record>

        <!-- actions opening views on models -->
        <record id="loan.action_window" model="ir.actions.act_window">
            <field name="name">Loans</field>
            <field name="res_model">loan.options</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Top menu item -->
        <menuitem name="OSI-Loans" id="osi-loans.menu_root"/>

        <!-- menu categories -->
        <menuitem name="Applications" id="osi-loans.applications" parent="osi-loans.menu_root" action="applicant.action_window"/>
        <menuitem name="Loans" id="osi-loans.loans" parent="osi-loans.menu_root" action="loan.action_window"/>
    </data>
</odoo>
