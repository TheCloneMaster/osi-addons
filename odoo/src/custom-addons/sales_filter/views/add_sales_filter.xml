<odoo>
    <data>
        <record model="ir.ui.view" id="second_id_for_the_form">
            <field name="name">second_name_for_the_form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//filter[@name='my_quotation']" position="before">
                        <filter string="Today" name="today_ov"
                                domain="[('create_date','>=',context_today().strftime('%Y-%m-%d'))]"/>
                    </xpath>

                    <xpath expr="//filter[@name='salesperson']" position="before">
                        <filter string="Company" name="company" domain="[]" context="{'group_by':'company_id'}"/>
                    </xpath>

                </data>
            </field>
        </record>
    </data>
</odoo>
