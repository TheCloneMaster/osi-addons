<odoo>
    <record id="event_event_ticket_view_tree_from_event_inherit" model="ir.ui.view">
        <field name="name">event_event_ticket_view_tree_from_event_inherit</field>
        <field name="model">event.event.ticket</field>
        <field name="inherit_id" ref="event.event_event_ticket_view_tree_from_event"/>
        <field name="arch" type="xml">

            <field name="start_sale_datetime" position="before">
                <field name="published" widget="boolean_toggle"/>
            </field>

        </field>
    </record>


    <!-- Inherit Form View to Modify it -->
    <record id="event_event_ticket_view_form_from_event_inherit" model="ir.ui.view">
        <field name="name">event_event_ticket_view_form_from_event_inherit</field>
        <field name="model">event.event.ticket</field>
        <field name="inherit_id" ref="event.event_event_ticket_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//sheet" position="inside">
                <group>
                    <group>
                        <field name="published" widget="boolean_toggle"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
