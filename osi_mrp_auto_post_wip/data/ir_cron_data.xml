<odoo>
    <record id="ir_cron_post_wip_mrp" model="ir.cron">
        <field name="name">Auto Wip MRP</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field
            name="nextcall"
            eval="(DateTime.now().replace(hour=1, minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"
        />
        <field name="doall" eval="False" />
        <field name="model_id" ref="mrp.model_mrp_production" />
        <field name="code">model._cron_process_action_post_inventory_wip()</field>
        <field name="state">code</field>
    </record>
</odoo>
