<?xml version="1.0"?>
<odoo>
    <record id="sale_order_form_backorder" model="ir.ui.view">
        <field name="name">sale.order.form.backorder</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="uigd_value" readonly='1'/>
                <field name="bo_value" readonly='1'/>
                <field name="last_bill_date" readonly='1'/>
                <field name="last_date_delivered" readonly='1'/>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='product_uom_qty']" position='after'>
                <field name="adjusted_qty"/>
            </xpath>
        </field>
    </record>
    <record id="sale_order_line_backorder" model="ir.ui.view">
        <field name="name">sale.order.line.backorder</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.sale_order_line_view_form_readonly"/>
        <field name="arch" type="xml">
            <field name="order_id" position="before">
                <field name="exclude_from_bo_report"/>
            </field>
        </field>
    </record>

    	
</odoo>
